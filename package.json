{
  "name": "yi-recorder",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "start": "chcp 65001 && electron .",
    "build-win": "electron-builder --win --x64 --publish=never"
  },
  "keywords": [],
  "author": "",
  "license": "Apache-2.0",
  "description": "一个基于Electron的轻量级屏幕录制应用",
  "devDependencies": {
    "electron": "^28.1.0",
    "electron-builder": "^24.13.3",
    "electron-packager": "^17.1.2"
  },
  "dependencies": {
    "ffmpeg-static": "^5.2.0"
  },
  "build": {
    "appId": "com.yi.screenrecorder",
    "productName": "易录屏",
    "directories": {
      "output": "dist"
    },
    "win": {
      "icon": "assets/logo.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "artifactName": "${productName}-${version}.${ext}",
      "sign": null,
      "signingHashAlgorithms": null,
      "signDlls": false,
      "signAndEditExecutable": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "易录屏",
      "installerIcon": "assets/logo.ico",
      "uninstallerIcon": "assets/logo.ico",
      "installerHeaderIcon": "assets/logo.ico",
      "artifactName": "${productName}-Setup-${version}.${ext}"
    },
    "portable": {
      "artifactName": "${productName}-Portable-${version}.exe"
    },
    "asar": true,
    "extraResources": [
      {
        "from": "assets",
        "to": "assets"
      },
      {
        "from": "node_modules/ffmpeg-static/ffmpeg.exe",
        "to": "ffmpeg/ffmpeg.exe"
      }
    ]
  }
}

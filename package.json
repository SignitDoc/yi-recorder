{
  "name": "yi-recorder",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "test": "echo \"Error: no test specified\" && exit 1",
    "package-win": "electron-packager . 屏幕录制工具 --platform=win32 --arch=x64 --icon=assets/logo.ico --out=dist --overwrite"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "一个基于Electron的轻量级屏幕录制应用",
  "devDependencies": {
    "electron": "^28.1.0",
    "electron-builder": "^24.13.3",
    "electron-packager": "^17.1.2"
  },
  "build": {
    "appId": "com.yi.screenrecorder",
    "productName": "易录屏",
    "directories": {
      "output": "dist"
    },
    "win": {
      "icon": "assets/logo.ico",
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "artifactName": "${productName}-Portable-${version}.${ext}"
    },
    "portable": {
      "artifactName": "${productName}-Portable-${version}.exe"
    },
    "asar": true,
    "extraResources": [
      {
        "from": "assets",
        "to": "assets"
      }
    ]
  }
}
